package snake_game;

import java.util.Scanner;
import com.lgeorge.snake.*;
import java.io.IOException;
public class Game {
public static void main(String[] args) throws IOException {
	Scanner scanner = new Scanner(System.in);
	// Creation d'un objet Board
	Board board = new Board(17, 42);
	// Creation d'un objet Snake
	Snake snake = new Snake();
	// Initialisation du score à 0
	Integer score = 0;
	
	
	board.addFruit();
	
	
	while (true) 
	{
	char input = scanner.next().toLowerCase().charAt(0);
	if (input == 'q') { // on quitte si c'est la lettre q
	System.out.println("quit");
	return;
	}
	int dx = 0;
	int dy = 0;
	// conversion d'une touche en mouvement (dx,dy)
	switch (input) {
		case 'w':
			dx = 1;
			break;
		case 'r':
			dx = -1;
			break;
		case 's':
			dy = 1;
			break;
		case 's':
			dz = 1;
			break;
		default:
			dx = 0;
			dy = 0;
	}
	snake.move(direction);
	char underHeadContent = board.get(snake.getHeadX(), snake.getHeadY());
	// gestion des conditions particulieres (fruit mangé, collisions)
	switch (underHeadContent) {
		case 'x':
			score += 1;
			board.addFruit();
			break;
		case 'o':
		case '@':
			System.out.println("You eat yourself, end of game.");
			return;
		case '*':
			System.out.println("Wall collision, end of game.");
			return;
		default:
			break; }
		// ajout du snake dans le plateau de jeu
		board.addSnake(snake);
		// affichage du plateau de jeu
		board.draw();
		// affichage du score
		System.out.println("Score "+ score);
		}}