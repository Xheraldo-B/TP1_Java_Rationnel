package fusion_de_tableaux_tri√©s;

public class main {

	public static void main(String[] args) 
	{
		// TODO Auto-generated method stub
		int[] LIST_1 = {1,2,3,4, 4, 5, 6};
		int[] LIST_2 = {4, 5,6,7, 7, 7};
		
		int[] test = fusion(LIST_1, LIST_2);
		
		
		for(int i = 0; i < test.length; i++) {System.out.print(test[i] + " ");}
	}

	
	
	public static int[] fusion(int[] list1, int[] list2) 
	{
		
		int[] new_list = new int[list1.length+list2.length];
		
		int memory_1= 0;
		int memory_2= 0;
		
		
		for(int i = 0; i < new_list.length; i++)
		{
			if (memory_1 <= list1.length-1 && memory_2 <= list2.length-1) 
			{
				
				
				
				if(list1[memory_1] < list2[memory_2]) {new_list[i] = list1[memory_1]; memory_1++;}
				else if(list1[memory_1] > list2[memory_2]) {new_list[i] = list2[memory_2]; memory_2++;}
				
				else if(list1[memory_1] == list2[memory_2]) 
				{
					new_list[i] = list2[memory_2];
					i++;
					new_list[i] = list2[memory_2];
					memory_2++; 
					memory_1++;
				}
				
				
			}
			else if (memory_1 == list1.length && memory_2 < list2.length)
			{
				new_list[i] = list2[memory_2]; memory_2++;
			}
			else if (memory_2 == list2.length && memory_1 < list1.length)
			{
				new_list[i] = list1[memory_1]; memory_1++;
			}
			
		}
		
		return new_list;
	} 
}
